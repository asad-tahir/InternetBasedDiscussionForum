
@{
    ViewBag.Title = "Pending Users";
}
<table id="users-table" class="table table-striped mt-5">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        <tr id="user-data-row" style="display:none">
            <td id="name"></td>
            <td id="email"></td>
            <td id="actions"><button class="btn btn-primary approve" data-id="">Approve Account</button></td>
        </tr>
    </tbody>
    
</table>
<h5 id="nousers" class="text-info p-5" style="display:none">No pending users to display!</h5>
<div id="spinner" class="text-center">
    <div class="spinner-grow" style="width: 3rem; height: 3rem;" role="status">
        <span class="sr-only">Loading...</span>
    </div>
</div>
@section scripts{
    <script src="~/Scripts/app.admin.pendingusers.js"></script>
}   

